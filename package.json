{
  "name": "enlitevision",
  "version": "1.0.0",
  "description": "",
  "author": "@prisme",
  "license": "ISC",
  "main": "index.js",
  "scripts": {
    "start": "node server.js",
    "budo": "budo index.js:public/bundle.js --live",
    "dev": "devtool server.js -w & npm run watch",
    "watch": "watchify index.js -o public/bundle.js",
    "build:js": "browserify index.js | uglifyjs -m -c warnings=false > public/bundle.js",
    "build:css": "node_modules/.bin/postcss --use autoprefixer -b 'last 2 versions' < public/style/style.css | cssmin > public/style/style.min.css",
    "build": "npm run build:js && npm run build:css",
    "publish": "npm run build && git commit -am 'publish' && git push heroku master"
  },
  "browserify": {
    "transform": [
      "aliasify",
      [
        "installify",
        {
          "save": true
        }
      ],
      [
        "jadeify",
        {
          "compileDebug": true,
          "pretty": true
        }
      ]
    ]
  },
  "aliasify": {
    "aliases": {
      "lib": "./lib",
      "npm": "./node_modules/"
    },
    "replacements": {
      "components/(\\w+)": "./components/$1/index.js"
    }
  },
  "dependencies": {
    "@vimeo/player": "^1.0.4",
    "body-parser": "^1.15.2",
    "components": "^0.1.0",
    "doc-ready": "^1.0.4",
    "emitter": "0.0.5",
    "errorhandler": "^1.4.3",
    "express": "^4.14.0",
    "express-beautify": "^0.1.3",
    "flowtype": "^1.0.0",
    "gsap": "^1.19.0",
    "installify": "^1.0.3",
    "lib": "^0.1.1",
    "method-override": "^2.3.6",
    "morgan": "^1.7.0",
    "node-static": "^0.7.8",
    "postcss-cli": "^7.1.2",
    "prismic-nodejs": "^1.5.1",
    "prismic-toolbar": "prismicio/prismic-toolbar",
    "prismic.io": "^3.6.1",
    "pug": "^2.0.0-beta4",
    "q": "^1.4.1",
    "scrollmonitor": "^1.0.12",
    "serve-favicon": "^2.3.0",
    "swiper": "^3.3.1",
    "viewport": "^2.0.1"
  },
  "devDependencies": {
    "aliasify": "^2.0.0",
    "autoprefixer": "^6.4.0",
    "browserify": "^13.1.0",
    "budo": "^8.3.0",
    "cssmin": "^0.4.3",
    "installify": "^1.0.3",
    "jadeify": "^4.6.0",
    "uglify-js": "^2.7.0",
    "watchify": "^3.7.0"
  }
}
